<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h2>This is great, my first ExpressJS app</h2>
            <p>This is my converter without Web-Worker</p>
            <br>

            <table>
              <tr>
                <th>Temperature to convert (Example: 32f, 3.2e1F, -5,7C) =></th>
                <td><input id="entrada" autofocus onchange="convertir()"; placeholder="3.2e1f" size 30></td>
              </tr>
              <tr>
                <th>Is:</th>
                  <td><span class="output" id="salida"></span></td>
              </tr>
            </table>

        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
